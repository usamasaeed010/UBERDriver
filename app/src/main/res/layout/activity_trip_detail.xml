<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/lightgray"
    android:weightSum="12">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/x"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.4"
            tools:ignore="MissingConstraints">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/tool"
                android:background="@color/lightgray"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">



                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    >

                    <ImageView
                        android:id="@+id/backpress"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/ic_baseline_arrow_back_24"/>

                    <TextView
                        android:textSize="20dp"
                        android:textColor="@color/white"
                        android:id="@+id/home_text"
                        android:layout_width="190dp"
                        android:text="Your Trip details"
                        android:lines="1"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="70dp"

                        />

                </RelativeLayout>

            </androidx.appcompat.widget.Toolbar>

        </com.google.android.material.appbar.AppBarLayout>

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.3"/>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:cardCornerRadius="30dp"
        app:cardElevation="20dp"
        android:layout_weight="1"
        android:layout_marginHorizontal="15dp">



        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/default_dot"
            android:layout_gravity="center_vertical"
            android:src="@drawable/defult_dot"/>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:layout_marginLeft="40dp">

        <EditText
            android:id="@+id/ed_current_loc"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingHorizontal="10dp"
            android:hint="@string/techloop_software_house"
            android:textColorHint="@color/hint_color"
            android:textColor="@color/lightgray"
            android:gravity="center_vertical"
            android:lines="1"
            android:textStyle="bold"
            android:textSize="17sp" />
        </RelativeLayout>

    </androidx.cardview.widget.CardView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.4"/>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:cardCornerRadius="30dp"
        app:cardElevation="20dp"
        android:layout_weight="1"
        android:layout_marginHorizontal="15dp">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/default_dot2"
            android:layout_gravity="center_vertical"
            android:src="@drawable/defult_dot"/>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:layout_marginLeft="40dp">


            <EditText
                android:id="@+id/ed_drop_loc"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColor="@color/lightgray"
                android:gravity="center_vertical"
                android:hint="Emporium Mall"
                android:paddingHorizontal="10dp"
                android:lines="1"
                android:textColorHint="@color/hint_color"
                android:textStyle="bold"
                android:textSize="17sp" />
        </RelativeLayout>

    </androidx.cardview.widget.CardView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.4"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Trip Break Down"
        android:layout_marginHorizontal="20sp"
        android:textColor="@color/white"
        android:gravity="center"
        android:textSize="20sp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.8"
        android:weightSum="2"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="30dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.3"
            android:text="Total Distance"
            android:gravity="center_vertical"
            android:textSize="20sp"
            android:textColor="@color/white">
        </TextView>

        <TextView
            android:id="@+id/txt_tot_distance"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:text="8km"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.8"
        android:weightSum="2"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="30dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.3"
            android:text="Total Time"
            android:gravity="center_vertical"
            android:textSize="20sp"
            android:textColor="@color/white">
        </TextView>

        <TextView
            android:id="@+id/ed_tot_time"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.8"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:text="15m 32s"/>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.8"
        android:weightSum="2"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="30dp"
        android:orientation="horizontal">


        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.3"
            android:text="Fare"
            android:gravity="center_vertical"
            android:textSize="20sp"
            android:textColor="@color/white">
        </TextView>


        <TextView
            android:id="@+id/txt_fare_price"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.8"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:text="$25.00"/>

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.2"/>


<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="6.3"
    android:weightSum="9"
    android:orientation="vertical"
    android:background="@drawable/cardview_background">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="0.5"/>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.5"
        android:text="@string/rate_your_driver"
        android:textColor="@color/lightgray"
        android:textSize="23sp"
        android:gravity="center"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:weightSum="4.5"
        android:layout_weight="4">


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_weight="1.2">

            <ImageView
                android:id="@+id/img_call"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/background_card_view"
                android:src="@drawable/ic_baseline_local_phone_24"
                android:paddingHorizontal="10dp"
                app:tint="@color/white" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_weight="2">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/profile_image"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:src="@drawable/ic_baseline_person_24"
                app:civ_border_width="2dp"
                app:civ_border_color="@color/lightgray"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_weight="1.2">

            <ImageView
                android:id="@+id/img_msg"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/background_card_view"
                android:src="@drawable/ic_baseline_chat_24"
                android:paddingHorizontal="10dp"
                app:tint="@color/white" />
        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/txt_driver_name"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.2"
        android:gravity="center"
        android:text="Mr.Usama"
        android:layout_marginTop="2dp"
        android:textColor="@color/white"
        android:background="@drawable/background_card_view"
        android:layout_marginHorizontal="100dp"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.5"
        android:gravity="center"
        android:orientation="horizontal">


        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:src="@drawable/ic_baseline_star_border_24"
            app:tint="@color/yellow" />

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:src="@drawable/ic_baseline_star_border_24"
            app:tint="@color/yellow" />

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:src="@drawable/ic_baseline_star_border_24"
            app:tint="@color/yellow" />

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:src="@drawable/ic_baseline_star_border_24"
            app:tint="@color/yellow" />

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:src="@drawable/ic_baseline_star_border_24"
            app:tint="@color/yellow" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:weightSum="2"
        android:layout_weight="1.3"
        >

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.1"
            android:text="Had any problem ?"
            android:gravity="center|right"
            android:textSize="15sp"
            android:textColor="@color/lightgray"/>

        <TextView
            android:id="@+id/report"
            android:layout_width="0dp"
            android:layout_weight="0.5"
            android:layout_height="wrap_content"
            android:text="Report"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="@color/lightgray"/>

    </LinearLayout>

</LinearLayout>

</LinearLayout>
